<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_cropvideo1" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/glviewFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/mainImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/shareapp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/sharehd"
            android:layout_above="@id/download"
            android:layout_marginBottom="30dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/download"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/savehd"
            android:layout_marginRight="10dp"
            android:layout_above="@id/setwall"
            android:layout_marginBottom="30dp"
            android:layout_alignParentRight="true"/>

        <LinearLayout

            android:id="@+id/setwall"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:layout_marginBottom="100dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/facebookll"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center">

                <Button
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/apply" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/whatsupll"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:visibility="gone">

                <Button
                    android:id="@+id/whatsup"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/what" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/install"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:visibility="gone">

                <Button
                    android:id="@+id/insta"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/insta" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/sharell"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/share"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/sharecccc"
                    android:gravity="center" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bannerAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"></RelativeLayout>
</RelativeLayout>
